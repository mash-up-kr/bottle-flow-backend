{
    "name": "loling-backend",
    "version": "0.1.0",
    "description": "Loling 백엔드",
    "private": true,
    "engines": {
        "ndoe": "~8.12 || ~10.15",
        "npm": ">= 6"
    },
    "scripts": {
        "build": "npx tsc -p tsconfig.build.json",
        "start": "npx ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "npx nodemon",
        "start:debug": "npx nodemon --config nodemon-debug.json",
        "prestart:prod": "npx rimraf dist && tsc",
        "start:prod": "node dist/main.js",
        "lint": "npx tslint -p tsconfig.json -c tslint.json",
        "test": "npx jest",
        "test:watch": "npx jest --watch",
        "test:cov": "npx jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
    },
    "dependencies": {
        "@nestjs/common": "^5.4.0",
        "@nestjs/core": "^5.4.0",
        "@nestjs/typeorm": "^5.3.0",
        "aws-sdk": "^2.385.0",
        "class-transformer": "^0.2.0",
        "class-validator": "^0.9.1",
        "reflect-metadata": "^0.1.12",
        "rimraf": "^2.6.2",
        "rxjs": "^6.2.2",
        "sqlite3": "^4.0.6",
        "typeorm": "^0.2.12",
        "typescript": "^3.0.1"
    },
    "devDependencies": {
        "@nestjs/testing": "^5.1.0",
        "@types/express": "^4.16.0",
        "@types/jest": "^23.3.1",
        "@types/node": "^10.7.1",
        "@types/supertest": "^2.0.5",
        "jest": "^23.5.0",
        "nodemon": "^1.18.3",
        "prettier": "^1.14.2",
        "supertest": "^3.1.0",
        "ts-jest": "^23.1.3",
        "ts-loader": "^4.4.2",
        "ts-node": "^7.0.1",
        "tsconfig-paths": "^3.5.0",
        "tslint": "5.11.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
